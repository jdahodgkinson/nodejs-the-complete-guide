extends layouts/main-layout

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{ product.title }
                        .card__image
                            img(src="https://cdn.elearningindustry.com/wp-content/uploads/2016/05/top-10-books-every-college-student-read-1024x640.jpeg", alt="Books")
                        .card__content
                            h2.product__price Â£19.99
                            p.product__description A very interesting book!
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No products...

